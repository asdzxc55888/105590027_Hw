<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="edu.ntut.user.myhw3.MainActivity">

    <TextView
        android:id="@+id/txtSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sex"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radGrpSex"
        android:layout_width="match_parent"
        android:layout_height="91dp">

        <RadioButton
            android:id="@+id/RadioMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/RadioMale" />

        <RadioButton
            android:id="@+id/RadioFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RadioFemale" />

    </RadioGroup>

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radGrpAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RadioGroup>

    <Spinner
        android:id="@+id/SpinnerAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/male_list" />

    <Spinner
        android:id="@+id/SpinnerAge2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/female_list" />

    <CheckBox
        android:id="@+id/CheckMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/music" />

    <CheckBox
        android:id="@+id/CheckClimbing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/climbing" />

    <CheckBox
        android:id="@+id/CheckDance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dance" />

    <CheckBox
        android:id="@+id/CheckDrawing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/drawing" />

    <CheckBox
        android:id="@+id/CheckEating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eating" />

    <CheckBox
        android:id="@+id/CheckReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reading" />

    <CheckBox
        android:id="@+id/CheckSing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sing" />

    <CheckBox
        android:id="@+id/CheckSwim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/swim" />

    <CheckBox
        android:id="@+id/CheckTravel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/travel" />

    <CheckBox
        android:id="@+id/CheckWriting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/writing" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOK"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtSug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suggestion"
        android:textSize="18sp" />

</LinearLayout>
